<h1>{{title}}</h1>
<h1>{{date}}</h1>

{{#if isEditing}}
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea id="body" class="form-control" rows="15" value=body}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>

{{else}}

<button class="btn btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-danger" {{action 'delete'}}>Delete</button>

<h2>Items</h2>

{{#each item in model.items}}
<div {{action 'showModal' item}}>
  {{item.name}}
  {{item.description}}
  {{item.price}}
  <img {{bind-attr src=item.image}}/>
</div>
{{/each}}

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{currentItem.name}}</h4>
        <img {{bind-attr src=currentItem.image}}/>
      </div>
      <div class="modal-body">
        <p>{{currentItem.description}}</p>
      </div>
      <div class="modal-footer">
        <span>Item price: {{currentItem.price}}</span>

        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

{{outlet}}

{{#link-to 'new-item' this class="btn btn-default"}}New item{{/link-to}}

{{/if}}
